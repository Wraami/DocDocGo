@page
@model DocDocGo.Pages.Reports.ReportsModel
@{
    ViewData["Title"] = "Reports";
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";

}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form class="d-flex">
                <input id="searchBox" class="form-control me-sm-2" type="search" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
            </form>
            <div class="form-group" style="margin-top: 10px;">

                    <table class="table table-hover table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Report ID</th>
                                <th>Patient ID</th>
                                <th>Created On</th>
                                <th>Report Description</th>
                                <th>Report Type</th>
                                <th>Has Report Been Printed?</th>
                                <th>Report Status</th>
                                <th>Report Started By Staff member</th>
                                <th>Last Updated</th>
                                <th>Last Updated By</th>
                                <th> Actions </th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Reports != null)
                            {
                                @foreach (var report in Model.Reports)
                                {
                                    <tr>
                                        <td>@report.ReportId</td>
                                        <td>@report.PatientId</td>
                                        <td>@report.CreatedAt</td>
                                        <td>@report.ReportDescription</td>
                                        <td>
                                            @if (report.ReportTypeModel != null)
                                            {
                                                @report.ReportTypeModel.TemplateType
                                            }
                                            else
                                            {
                                                <span>No Report type used</span>
                                            }
                                        </td>
                                        <td>@(report.IsReportPrinted ? "Yes" : "No")</td>
                                        <td>@report.Status</td>
                                        <td>@report.InitialStaffName</td>
                                        <td>@report.LastUpdated</td>
                                        <td>@report.LastUpdatedBy</td>
                                        <td>
                                            <ul class="list-inline">
                                                <li class="list-inline-item">
                                                    <a asp-page="/Reports/ExportReport" asp-route-id="@report.ReportId" class="btn btn-primary my-2 my-sm-0"
                                                       data-toggle="tooltip" data-placement="top" title="Export">
                                                        <i class="bi bi-arrow-bar-up"></i>
                                                    </a>
                                                </li>

                                                <li class="list-inline-item">
                                                    <a asp-page="/Reports/UpdateReport" asp-route-id="@report.ReportId" class="btn btn-warning my-2 my-sm-0"
                                                       data-toggle="tooltip" data-placement="top" title="Edit">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    <script src="~/js/search.js"></script>@* This is for the searching logic.*@
}