@page
@model DocDocGo.Pages.Reports.ReportsModel
@{
    ViewData["Title"] = "Reports";
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";

}
<div class="row">
    <div class="col-md-5">
        <form class="d-flex">
            <input id="searchBox" class="form-control me-sm-2" type="search" placeholder="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
        </form>
        <div class="form-group" style="margin-top: 10px;">
            <table class="table table-hover table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                    <th>Report ID</th>
                        <th>Patient Name</th>
                        <th>Created On</th>
                    <th>Report Type</th>
                    <th>Has Report Been Printed?</th>
                        <th>Report Status</th>
                        <th>Done By Staff member</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model.Reports)
                {
                    <tr>
                        <td>@report.ReportId</td>
                        <td>@report.PatientId</td>
                        <td>@report.ReportCreationTime</td>
                        <td>@report.ReportType</td>
                        <td>@(report.IsReportPrinted ? "Yes" : "No")</td>
                        <td>@report.ReportStatus</td>
                        <td>@report.StaffName</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    </div>
</div>

@section Scripts {
    <script>
    </script>
}