@page
@model DocDocGo.Pages.Patient.UpdatePatientModel
@{
    ViewData["Title"] = "Edit Patient";
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
}

<div class="container border" style="padding: 20px">
    <section>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ExistingPatientModel.PatientId" />
            <div class="form-floating">
                <input asp-for="ExistingPatientModel.FirstName" class="form-control" aria-required="true" />
                <label asp-for="ExistingPatientModel.FirstName" class="form-label"> First name</label>
                <span asp-validation-for="ExistingPatientModel.FirstName" class="text-danger"></span>
            </div>
            <div style="margin-bottom: 10px;"></div>

            <div class="form-floating">
                <input asp-for="ExistingPatientModel.LastName" class="form-control" />
                <label asp-for="ExistingPatientModel.LastName" class="form-label">Last name</label>
                <span asp-validation-for="ExistingPatientModel.LastName" class="text-danger"></span>
            </div>
            <div style="margin-bottom: 10px;"></div>


            <div class="form-floating">
                <input asp-for="ExistingPatientModel.EmailAddress" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="ExistingPatientModel.EmailAddress" class="form-label">Email Address</label>
                <span asp-validation-for="ExistingPatientModel.EmailAddress" class="text-danger"></span>
            </div>
            <div style="margin-bottom: 10px;"></div>

            <div class="form-floating">
                <input asp-for="ExistingPatientModel.ContactNumber" class="form-control" autocomplete="tel" />
                <label asp-for="ExistingPatientModel.ContactNumber" class="form-label"> Phone Number</label>
                <span asp-validation-for="ExistingPatientModel.ContactNumber" class="text-danger"></span>
            </div>
            <div style="margin-bottom: 10px;"></div>

            <div class="form-floating">
                <select asp-for="ExistingPatientModel.Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Non-Binary">Non-Binary</option>
                    <option value="Prefer not to say">Prefer not to say</option>
                    <option value="Custom">Custom</option>
                </select>
                <label asp-for="ExistingPatientModel.Gender" class="form-label"> Select gender</label>
            </div>
            <div style="margin-bottom: 10px;"></div>

            <div class="form-floating">
                <input asp-for="ExistingPatientModel.DateOfBirth" id="dateOfBirth" class="form-control"
                       data-provide="datepicker" data-date-format="mm/dd/yyyy" />
                <label asp-for="ExistingPatientModel.DateOfBirth" class="form-label">Date of Birth</label>
                <span asp-validation-for="ExistingPatientModel.DateOfBirth" class="text-danger"></span>
            </div>
            <div style="margin-bottom: 10px;"></div>

            <div style="margin-bottom: 15px;"></div>
            <div class="form-check">
                <input asp-for="ExistingPatientModel.IsPrivatePatient" class="form-check-input" type="checkbox" aria-required="true     />
                <label asp-for="ExistingPatientModel.IsPrivatePatient" class="form-check-label">
                    Is not using state healthcare options?
                </label>
            </div>
            <div style="margin-bottom: 15px;"></div>
            <div class="form-group d-flex align-items-center">
                <div class="col-7 offset-2 text-center">
                    <button type="submit" class="btn btn-primary btn-block btn-lg">Update Patient</button>
                </div>
            </div>
            <div class="form-group">
            </div>
        </form>
    </section>
</div>