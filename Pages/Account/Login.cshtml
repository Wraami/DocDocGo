@page
@model DocDocGo.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Pages/Shared/_AuthLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-10"
    <section>
    <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="CredentialModel.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="CredentialModel.Email" class="form-label"></label>
                <span asp-validation-for="CredentialModel.Email" class="text-danger"></span>
            </div>
            <div style="margin-bottom: 10px;"></div>
            <div class="form-floating">
                <input asp-for="CredentialModel.Password" class="form-control" aria-required="true" />
                <label asp-for="CredentialModel.Password" class="form-label"></label>
                <span asp-validation-for="CredentialModel.Password" class="text-danger"></span>
            </div>
            <div style="margin-bottom: 10px;"></div>
            
            <div class="mb-3 form-check">
            <input type="checkbox" asp-for="CredentialModel.RememberMe" class="form-check-input" />
            <label class="form-check-label" asp-for="CredentialModel.RememberMe">Remember Me</label>
            </div>
           
            <div style="margin-bottom: 10px;"></div>

            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>

        <div class="form-group">
            <div class="col-7 offset-2">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </div>
        </div>
    </form>
   </section>
   </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}