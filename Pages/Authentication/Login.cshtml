@page
@model DocDocGo.Pages.Authentication.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container border" style="padding: 20px">
    <section>
    <form method="post">
        <div class="form-group">
            <label class="col-2" asp-for="credentialModel.Email"></label>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="credentialModel.Email" />
                <span asp-validation-for="credentialModel.Email" class="text-danger"></span>
            </div>
        </div>
        <div style="margin-bottom: 10px;"></div>

        <div class="form-group">
            <label class="col-2" asp-for="credentialModel.Password"></label>
            <div class="col-5">
                <input type="password" class="form-control" asp-for="credentialModel.Password" />
                <span asp-validation-for="credentialModel.Password" class="text-danger"></span>
            </div>
        </div>
<div style="margin-bottom: 10px;"></div>
        <div class="form-group">
            <div class="col-7 offset-2">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </div>
        </div>
        <div class="form-group">
                <p>
                    <a id="forgot-password">Forgot your password?</a>
                </p>
        </div>
    </form>
   </section>
</div>
